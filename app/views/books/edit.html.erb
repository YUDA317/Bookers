<h1 class="edit-h1">Editing Book</h1>

<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="errors"><%= message %></li>
        <% end %>
    </ul>
  <% end %>
  
<%= form_with model: @book do |f| %>

<div class="edit-box">
  <span class="edit-title">Title</span>
  <div class="box">
    <%= f.text_field :title %>
  </div>

  <span class="edit-body">Body</span>
  <div class="box">
    <%= f.text_area :body %>
  </div>
  <div class="box">
    <%= f.submit 'Update Book' %>
  </div>
</div>

<div class="link">
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", '/books' %>
</div>

<% end %>